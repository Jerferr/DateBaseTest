<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- HelloDBServlet-->
    <servlet>
        <servlet-name>HelloDBServlet</servlet-name>
        <servlet-class>com.Test.HelloDBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloDBServlet</servlet-name>
        <url-pattern>/HelloDB</url-pattern>
    </servlet-mapping>

<!-- ClientServlet-->
    <servlet>
        <servlet-name>ClientServlet</servlet-name>
        <servlet-class>com.Test.ClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientServlet</servlet-name>
        <url-pattern>/Client</url-pattern>
    </servlet-mapping>

<!-- BusinessServlet-->
    <servlet>
        <servlet-name>BusinessServlet</servlet-name>
        <servlet-class>com.Test.BusinessServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BusinessServlet</servlet-name>
        <url-pattern>/Guest</url-pattern>
    </servlet-mapping>

</web-app>